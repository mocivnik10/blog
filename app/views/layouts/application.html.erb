<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= image_tag "logo.png", style:"height: 60px;" %>
    </div>
    <ul class="navbar-custom nav navbar-nav">
      <li class="<%= 'active' if params[:controller] == 'welcome' %>"><%= link_to "DOMOV", root_path %></li>
      <li class="<%= 'active' if params[:controller] == 'articles' %>"><%= link_to "ÄŒLANKI", articles_path %></li>
      <li class="item"><%= link_to "CONTACT", "#" %></li>
    </ul>
    <ul class="navbar-custom nav navbar-nav pull-right">
      <li class="item">
        <% if user_signed_in? %>
          <%= current_admin.email %>
          <%= link_to "ODJAVI SE", destroy_admin_session_path, method: :delete %>
        <% else %>
          <%= link_to "PRIJAVI SE", "#",remote: true, data: { toggle: 'modal', target: '#myModal'} %>
        <% end %>
      </li>
    </ul>
  </div>
</nav>
<%= render '/layouts/messages' %>



<!-- Modal -->

<%= yield %>

</div>
</body>
</html>
