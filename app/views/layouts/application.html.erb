<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon33.ico' %>
  <link href='https://fonts.googleapis.com/css?family=Michroma' rel='stylesheet' type='text/css'>
</head>
<body>
  <div class="container my-custom-container">

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <!-- <div class="navbar-header">
      <%#= image_tag "logo.png", style:"height: 60px;" %>
    </div> -->
    <ul class="navbar-custom nav navbar-nav">
      <li class="<%= 'active' if params[:controller] == 'welcome' %>"><%= link_to "DOMOV", root_path %></li>
      <li class="<%= 'active' if params[:controller] == 'articles' %>"><%= link_to "ČLANKI", articles_path %></li>
      <li class="<%= 'active' if params[:controller] == 'contact_us' %>"><%= link_to "KONTAKT", contact_us_path %></li>
    </ul>
    <ul class="navbar-custom nav navbar-nav pull-right">
      <% if user_signed_in? %>
        <li>
          <%= link_to current_user.email, "#" %>
        </li>
        <li>
          <%= link_to "ODJAVI SE", destroy_user_session_path, method: :delete %>
        </li>
      <% else %>
        <li class="item">
            <%= link_to "PRIJAVI SE", "#",remote: true, data: { toggle: 'modal', target: '#myModal'} %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
<div class="text-center">
<%= image_tag 'logo11.png', class:"index-logo" %>
</div>
<%= render '/layouts/messages' %>


<!-- Modal -->
<%= render '/layouts/sign_in_modal' %>


<%= yield %>
</div>


<footer class="header"></footer>
<footer class="body">
  <div class="container">
    <div class="text-center">
      <%= image_tag "logo11.png", style:"height: 50px;" %>
      <hr style="margin: 0">
        <p style="padding: 15px 0 5px 0">
          ©ŠportniBlog - 2016. Vse pravice pridržane. Developed by Iztok M.
        </p>
    </div>
  </div>

</footer>

</body>
</html>
