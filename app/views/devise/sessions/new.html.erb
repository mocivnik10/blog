
<div class="row" style="margin-top: 50px;">
  <div class="col-md-4">

  </div>
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form form-horizontal") do |f| %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
        </div>

        <div class="text-center">
          <%= f.submit "Prijavi se", class:"btn btn-default" %><br /><br />

          <p>
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            Še nimaš računa, Registriraj se <%= link_to "Tukaj!", new_registration_path(resource_name) %><br />
            <% end -%>

          </p>
        </div>

    <% end %>

  </div>
  <div class="col-md-4">

  </div>
</div>
