<h2 class="text-center">Spremeni svoje Geslo</h2>

<div class="row" style="margin-top: 50px;">
  <div class="col-md-4">

  </div>
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, html: { class:"form form-horizontal"}) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "Novo Geslo" %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Potrdi novo Geslo" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
      </div>

      <div class="text-center">
        <div class="actions">
          <%= f.submit "Spremeni moje Geslo", class:"btn btn-default" %>
        </div>
      </div>
      <% end %>
  </div>
  <div class="col-md-4">

  </div>
</div>
