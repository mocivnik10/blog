<div class="container">




  <h1 class="text-center">Članki<small></small> </h1>
  <br />
  <% if user_signed_in? && current_user.is_admin? %>
    <%= link_to '+ Dodaj nov članek', new_article_path %>
  <% end %>
  <br />
  <br />



  <% @articles.each do |article| %>
  <ul class="list-group inline-list">
    <li class="list-group-item">
      <h4 class="text-center"><%= link_to "#{article.title}", article %></h4>
      <%= truncate(article.body, length: 200) { link_to "Preberi več", article } %>
        <% if user_signed_in? && current_user.is_admin? %>
        <br />
        <br />
        <ol class="breadcrumb">
          <li><%= link_to 'Uredi', edit_article_path(article), class:"text-right" %></li>
          <li><%= link_to 'Izbriši', article, method: :delete, data: { confirm: 'Are you sure?' }, class:"text-right" %></li>
        </ol>
        <% end %>
      </li>
    </ul>
    <% end %>



  <br>



</div>
