
<div class="jumbotron jumbotron-header">
  <h1 class="blog-title">Prvi pravi blog o sportu</h1>
</div>
<div class="middle-menu">
  <ul class="list-inline text-center middle-menu-content">
    <li><%= link_to "Domov", root_path %></li>
    <li><%= link_to "ÄŒlanki", articles_path %></li>
    <li><%= link_to "Contact", "#" %></li>
    <li>
      <% if admin_signed_in? %>
        <%= current_admin.email %>
        <%= link_to "Odjavi se", destroy_admin_session_path, method: :delete %>
      <% else %>
        <%= link_to "Prijavi se", new_admin_session_path, data: { toggle: 'modal', target: '#myModal'} %>
      <% end %>
    </li>
    <li>
      <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Launch demo modal
</button>
    </li>
  </ul>
</div>
<div class="jumbotron jumbotron-header1">
  <h1 class="blog-title">Beri zanimivosti!</h1>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Prijavi se!</h4>
      </div>
      <div class="modal-body">
        <%= render 'admins/sessions/new_form' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
