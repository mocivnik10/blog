<div class="row" style="margin-top: 60px;">
  <div class="col-md-4">

  </div>
  <div class="col-md-4">
    <%= form_for :contact, url: send_contact_email_path, method: :put, html: { class: "form form-horizontal"} do |f| %>


      <div class="form-group">
        <%= f.label :name, "Ime"  %>
        <%= f.text_field :name, class: "form-control", id:"ContactName" %>
      </div>
      <div class="form-group">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, class: "form-control", id:"ContactEmail", value: "#{if current_user then current_user.email end}" %>
      </div>
      <div class="form-group">
        <%= f.label :content, "Vsebina" %>
        <%= f.text_area :content, rows: 8, class: "form-control", id:"ContactContent" %>
      </div>
      <div class="actions text-center">
        <%= f.submit "PoÅ¡lji", class:"btn btn-default", id:"submit_form" %>
      </div>
    <% end %>

  </div>
  <div class="col-md-4">

  </div>
</div>
